<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="com.prohect.sql_frontend.main.insert.InsertLogic">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="文件">
                    <items>
                        <MenuItem fx:id="loadFromCsv2tableView" mnemonicParsing="false"
                                  onAction="#loadFromCsv2tableViewOnAction" text="从csv文件导入"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="theInsertTableView" onMouseClicked="#tableViewOnMouseClicked" prefHeight="326.0"
                           prefWidth="640.0">
                    <columns>
                        <TableColumn prefWidth="75.0" text="C1"/>
                        <TableColumn prefWidth="75.0" text="C2"/>
                    </columns>
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem fx:id="removeSelectedRowMeunItem" mnemonicParsing="false"
                                          onAction="#removeSelectedRow" text="清除选中行"/>
                                <MenuItem fx:id="removeAllRowsMeunItem" mnemonicParsing="false" onAction="#removeAllRow"
                                          text="清除所有行"/>
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </TableView>
                <Button layoutX="586.0" layoutY="338.0" mnemonicParsing="false" onMouseClicked="#submitTheChanges"
                        text="提交"/>
                <Button layoutX="14.0" layoutY="338.0" mnemonicParsing="false" onAction="#newRowButtonOnAction"
                        text="新增一行"/>
                <TextField fx:id="identifierOfTableTextField" layoutX="228.0" layoutY="338.0" text="id"/>
                <CheckBox fx:id="hasIdentifierCheckBox" layoutX="138.0" layoutY="342.0" mnemonicParsing="false"
                          prefHeight="16.0" prefWidth="85.0" text="有标识列:"/>
                <Label fx:id="infoLabel" layoutX="399.0" layoutY="342.0" prefHeight="15.0" prefWidth="161.0"
                       text="Info: "/>
            </children>
        </AnchorPane>
    </children>
</VBox>
